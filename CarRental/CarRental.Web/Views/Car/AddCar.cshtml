
@{
    ViewBag.Title = "AddCar";
}

<div id="addCarSection">
    <div class="row">
        <h2>Register Car</h2>
        <div class="col-xs-3 col-md-3">
            adasd
        </div>
        <div class="col-xs-9 col-md-9">
            @using (Html.BeginForm("AddCar", "Car", FormMethod.Post, new {role = "form"}))
            {
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6">
                            <label class="control-label">Title</label>
                            <input class="form-control" name="title" type="text"
                                   validate-on="blur" required>
                        </div>
                        <div class="col-xs-6 col-sm-6">
                            <label class="control-label">Stocks</label>
                            <div class="input-group number-spinner">
                                <span class="input-group-btn">
                                    <a class="btn btn-default" id="downgrade"><span class="glyphicon glyphicon-minus"></span></a>
                                </span>
                                <input type="text" class="form-control text-center" id="inputStocks" value="1">
                                <span class="input-group-btn">
                                    <a class="btn btn-default" id="upgrade"><span class="glyphicon glyphicon-plus"></span></a>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row spaceBlock">
                        <div class="col-xs-6 col-sm-4">
                            <label class="control-label">Group Type</label>
                            <select class="form-control">
                                <option>Economic</option>
                                <option>Middle</option>
                                <option>High</option>
                                <option>Luxury</option>
                                <option>4x4</option>
                                <option>MiniVan</option>
                            </select>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            <label class="control-label">Gear Type</label>
                            <select class="form-control">
                                <option>Automatic</option>
                                <option>Manual</option>
                            </select>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            <label class="control-label">Fuel Type</label>
                            <select class="form-control">
                                <option>Gasoline</option>
                                <option>Diesel</option>
                            </select>
                        </div>
                    </div>
                    <div class="row spaceBlock">
                        <div class="col-xs-6 col-sm-4">
                            <label class="control-label">Location</label>
                            <input class="form-control" name="title" type="text"
                                   validate-on="blur" required>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            <label class="control-label">City</label>
                            <input class="form-control" name="title" type="text"
                                   validate-on="blur" required>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            <label class="control-label">Country</label>
                            <input class="form-control" name="title" type="text"
                                   validate-on="blur" required>
                        </div>
                    </div>
                    <div class="row spaceBlock">
                        <div class="col-xs-6 col-sm-4">
                            <label class="control-label">Capacity</label>
                            <select class="form-control">
                                <option>2</option>
                                <option>4</option>
                                <option>5</option>
                                <option>9</option>
                            </select>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            <label class="control-label">Price</label>
                            <input class="form-control" name="title" type="text"
                                    required>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            <label class="control-label">Insurance</label>
                            <select class="form-control">
                                <option>Exempt</option>
                                <option>Not Exempt</option>
                            </select>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        /*function changeValue(value) {
            alert(value);
        };*/
        $("#downgrade")
            .click(function() {
                var oldValue = $("#inputStocks").val().trim(), newValue = 0;
                if (oldValue > 1) {
                    newValue = parseInt(oldValue) - 1;
                } else {
                    newValue = 1;
                }
                $("#inputStocks").val(newValue);
            });
        $("#upgrade")
            .click(function () {
                var oldValue = $("#inputStocks").val().trim(), newValue = 0;
                newValue = parseInt(oldValue) + 1;
                $("#inputStocks").val(newValue);
            });
    </script>
}